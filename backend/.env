# App
APP_NAME=Tour-Visitor
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (Postgres) - uncomment/use or set DATABASE_URL
DB_CLIENT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=tour_visitor_db
DATABASE_URL=postgres://your_db_user:your_db_password@localhost:5432/tour_visitor_db

# Or MongoDB (optional) - comment out if not used
MONGO_URI=mongodb://127.0.0.1:27017/tour-visitor

# Auth
JWT_SECRET=change_this_to_a_strong_random_string
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS = 10

# Cache / Session (optional)
REDIS_URL=redis://localhost:6379

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM="Tour Visitor <no-reply@example.com>"

# CORS / Frontend
CORS_ORIGIN=http://localhost:3000

# Third-party / Monitoring (optional)
SENTRY_DSN=
STRIPE_SECRET_KEY=